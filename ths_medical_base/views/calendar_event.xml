                <!--                                                                  'no_show')</attribute>-->
                <!--                <attribute name="decoration-success">ths_status == 'billed'</attribute>-->
                <!--                <attribute name="decoration-warning">ths_status == 'completed'</attribute>-->
                <!--                <attribute name="decoration-info">ths_status == 'checked_in'</attribute>-->
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="ths_patient_id"/>
                <field name="ths_practitioner_id"/>
                <field name="ths_room_id"/>
                <field name="ths_status"/>
                <field name="ths_is_walk_in"/>
            </xpath>
        </field>
    </record>

    <record id="view_calendar_event_search_inherit_ths_medical" model="ir.ui.view">
        <field name="name">calendar.event.search.inherit.ths.medical</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="after">
                <field name="ths_patient_id"/>
                <field name="ths_practitioner_id"/>
                <field name="ths_room_id"/>
                <field name="appointment_type_id"/>
                <field name="ths_is_walk_in"/>
            </xpath>
            <xpath expr="//filter[@name='mymeetings']" position="after">
                <filter string="Walk-ins" name="filter_walkin" domain="[('ths_is_walk_in', '=', True)]"/>
                <separator/>
                <filter string="Medical Status" name="groupby_ths_status" context="{'group_by': 'ths_status'}"/>
                <filter string="Practitioner" name="groupby_practitioner"
                        context="{'group_by': 'ths_practitioner_id'}"/>
                <filter string="Room" name="groupby_room" context="{'group_by': 'ths_room_id'}"/>
                <filter string="Appointment Type" name="groupby_app_type"
                        context="{'group_by': 'appointment_type_id'}"/>
            </xpath>
        </field>
    </record>

