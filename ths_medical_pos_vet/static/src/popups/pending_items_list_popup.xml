<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-patch="ths_medical_pos.PendingItemsListPopup" t-name="ths_medical_pos_vet.PendingItemsListPopupVet">

        <xpath expr="//thead/tr" position="replace">
             <tr>
                <th>Pet</th>
                 <th>Owner</th>
                 <th>Product/Service</th>
                 <th>Qty</th>
                 <th>Unit Price</th>
                 <th>Provider</th>
                 <th>Encounter</th>
                 <th>Action</th>
            </tr>
        </xpath>

        <xpath expr="//tbody/tr[td[@colspan='7']]" position="attributes">
            <attribute name="colspan">8</attribute> </xpath>

        <xpath expr="//tbody/t[@t-foreach='itemsToShow']/tr/td[1]" position="replace">
             <td><t t-esc="item.patient_id ? item.patient_id[1] : 'N/A'"/></td>
            <td><t t-esc="item.partner_id ? item.partner_id[1] : 'N/A'"/></td> </xpath>

    </t>

</templates>