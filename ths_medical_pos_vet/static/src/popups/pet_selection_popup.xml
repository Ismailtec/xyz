<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="ths_medical_pos_vet.PetSelectionPopup">
    <Dialog title="props.title">
      <div class="p-3">

        <h6 class="fw-bold mb-2">Select Pets</h6>
          <div class="d-flex flex-wrap gap-2">
          <t t-foreach="state.ownerPets" t-as="pet" t-key="pet.id">
            <button
                    t-att-class="[
                'btn btn-sm',
                isPetSelected(pet.id) ? 'btn-primary' : 'btn-outline-secondary'
              ]"
                    t-on-click="() => togglePetSelection(pet.id)"
            >
              <t t-esc="pet.name"/>
            </button>
          </t>
        </div>

          <h6 class="fw-bold mt-3 mb-2">Select Practitioner</h6>
          <div class="d-flex flex-wrap gap-2">
          <t t-foreach="state.practitioners" t-as="practitioner" t-key="practitioner.id">
            <button
                    t-att-class="[
                'btn btn-sm',
                state.selectedPractitioner === practitioner.id ? 'btn-primary' : 'btn-outline-secondary'
              ]"
                    t-on-click="() => state.selectedPractitioner = practitioner.id"
            >
              <t t-esc="practitioner.name"/>
            </button>
          </t>
        </div>

          <h6 class="fw-bold mt-3 mb-2">Select Room</h6>
          <div class="d-flex flex-wrap gap-2">
          <t t-foreach="state.rooms" t-as="room" t-key="room.id">
            <button
                    t-att-class="[
                'btn btn-sm',
                state.selectedRoom === room.id ? 'btn-primary' : 'btn-outline-secondary'
              ]"
                    t-on-click="() => state.selectedRoom = room.id"
            >
              <t t-esc="room.name"/>
            </button>
          </t>
        </div>

      </div>

        <div class="modal-footer justify-content-end">
        <button class="btn btn-outline-danger" t-on-click="cancel">Cancel</button>
            <button class="btn btn-primary" t-on-click="confirm">Confirm</button>
      </div>
    </Dialog>
  </t>

</templates>
