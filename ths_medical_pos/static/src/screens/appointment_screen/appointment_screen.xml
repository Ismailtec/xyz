<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ths_medical_pos.AppointmentScreen">
        <div class="appointment-screen screen h-100 d-flex flex-column bg-100">
            <div class="appointment-screen-header screen-header d-flex align-items-center justify-content-between p-2 gap-2">
                 <div class="d-flex align-items-center gap-3">
                    <h1 class="title m-0">Appointments</h1>
                     <div class="filter-practitioners border rounded p-1 bg-light text-muted small">Practitioner Filter...</div>
                     <div class="filter-rooms border rounded p-1 bg-light text-muted small">Room Filter...</div>
                 </div>
                <div class="controls d-flex align-items-center flex-shrink-0">
                    <button class="btn btn-secondary ms-2" t-on-click="() => this.fetchAppointments()">
                         <i class="fa fa-refresh me-1"/>Refresh
                    </button>
                    <button class="btn btn-primary ms-2" t-on-click="() => this.createNewAppointment()">
                         <i class="fa fa-plus me-1"/>New Appointment
                    </button>
                    <button class="btn btn-danger ms-2" t-on-click="() => this.pos.showScreen('ProductScreen')">
                         <i class="fa fa-arrow-left me-1"/>Back
                    </button>
                </div>
            </div>

            <div class="appointment-screen-content flex-grow-1 p-2 overflow-hidden">
                <div class="o_calendar_container h-100" t-ref="calendar-container"/>
                <div t-if="state.isLoading" class="loading-indicator text-center p-5">
                    <i class="fa fa-spinner fa-spin fa-2x text-muted"/>
                    Loading...
                 </div>
            </div>
        </div>
    </t>

</templates>