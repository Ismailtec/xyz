<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Extend the ProductScreen to add medical buttons -->
    <t t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">

        <!-- Add medical control buttons to the existing control-buttons div -->
        <xpath expr="//div[hasclass('pos-leftheader')]" position="inside">

            <!-- Medical Appointments Button -->
            <button class="medical-controls d-flex align-items-center gap-2 p-2 border rounded"
                    t-att-class="{'btn-primary': screen === 'ActionScreen' and pos.mainScreen.props.actionName === 'ManageBookings'}"
                    t-on-click="() => this.pos.manageBookings()" >

                <span t-if="!ui.isSmall">Appointments</span>
                <i t-else="" class="fa fa-lg fa-fw fa-calendar"/>
            </button>

        </xpath>

