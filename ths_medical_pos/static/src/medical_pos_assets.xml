<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Medical POS Assets Bundle -->
    <template id="assets_pos" inherit_id="point_of_sale.assets_pos">

        <!-- JavaScript Components -->
        <xpath expr="." position="inside">
            <!-- Popup Components -->
            <script type="text/javascript"
                    src="/ths_medical_pos/static/src/popups/appointment_create_popup.js"/>
            <script type="text/javascript"
                    src="/ths_medical_pos/static/src/popups/appointment_detail_popup.js"/>
            <script type="text/javascript"
                    src="/ths_medical_pos/static/src/popups/pending_items_list_popup.js"/>

            <!-- Button Components -->
            <script type="text/javascript"
                    src="/ths_medical_pos/static/src/components/pending_items_button/pending_items_button.js"/>
            <script type="text/javascript"
                    src="/ths_medical_pos/static/src/components/appointment_calendar_button/appointment_calendar_button.js"/>
            <script type="text/javascript"
                    src="/ths_medical_pos/static/src/components/appointment_screen_button/appointment_screen_button.js"/>

            <!-- Screen Patches -->
            <script type="text/javascript"
                    src="/ths_medical_pos/static/src/screens/product_screen/product_screen.js"/>

            <!-- SCSS Styles -->
            <link rel="stylesheet" type="text/scss"
                  href="/ths_medical_pos/static/src/css/style.css"/>
        </xpath>

    </template>

    <!-- Medical POS Templates -->
    <template id="medical_pos_templates" inherit_id="point_of_sale.assets_pos">
            <xpath expr="." position="inside">
                <!-- XML Templates -->
                <script type="text/xml" src="/ths_medical_pos/static/src/xml/medical_pos_templates.xml"/>
            </xpath>
        </template>
</odoo>